{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,

		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off",
				"noForEach": "off"
			},
			"correctness": {
				"noConstructorReturn": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			}
		},
		"ignore": ["./src/public"]
	}
}
